<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="44dp" />
                    <stroke android:color="@color/color_8F4DEA" android:width="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Unchecked state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="44dp" />
                    <stroke android:color="@color/color_D9DAE4" android:width="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
